<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color32</item>

        <!--Primary text & hint color-->
        <!--		<item mSearchText="android:textColor">@color/textPrimary</item>-->
        <!--		<item mSearchText="android:textColorHint">@color/hintPrimary</item>-->

        <!--Default font for change language-->
        <item name="fontPath">@string/app_font</item>

        <!--Material Dialog-->
        <item name="md_corner_radius">@dimen/_10mdp</item>
        <item name="md_background_color">@color/white</item>
        <item name="md_color_button_text">@color/color70</item>
        <item name="md_color_title">@color/black</item>
        <item name="md_color_content">@color/gray</item>
        <item name="md_color_hint">@color/textPrimary</item>
        <item name="md_ripple_color">@color/black30</item>
        <item name="android:textColorSecondary">@color/textPrimary</item>
    </style>

    <!--Splash Theme-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
    </style>

    <!--BottomNavigationView-->
    <style name="BottomMenuTextAppearanceActive">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomMenuTextAppearance">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="android:textColor">@color/whiteT</item>
    </style>

    <!--Fonts-->
    <style name="AppFont">
        <item name="fontPath">@string/app_font</item>
    </style>

    <style name="AppFontBold">
        <item name="fontPath">@string/app_font_bold</item>
    </style>

    <style name="AppFontHekayat">
        <item name="fontPath">@string/app_font_hekayat</item>
    </style>

    <!--Buttons-->
    <style name="BtnDefault" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingBottom">6dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="BtnDefault130" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">130dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="BtnDefault130Green" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">130dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="backgroundTint">@color/forestGreen</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="BtnHomeTop" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingEnd">18dp</item>
